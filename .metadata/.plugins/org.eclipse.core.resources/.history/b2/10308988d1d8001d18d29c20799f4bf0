package com.lcomputerstudy.testmvc2.controller2;

import java.io.IOException;
import java.util.ArrayList;
import javax.servlet.RequestDispatcher;
import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import com.lcomputerstudy.testmvc2.service2.UserService2;
import com.lcomputerstudy.testmvc2.vo2.User2;

@WebServlet("*.do")
public class Controller2 extends HttpServlet {
	private static final long serialVersionUID = 1L;
	
	protected void doGet(HttpServletRequest request2, HttpServletResponse response2) throws ServletException, IOException {
		doPost(request2, response2);
	}

	protected void doPost(HttpServletRequest request2, HttpServletResponse response2) throws ServletException, IOException {
		response2.setContentType("text/html; charset=utf-8");
		request2.setCharacterEncoding("utf-8");
		
		String requestURI = request2.getRequestURI();
		String contextPath = request2.getContextPath();
		String command2 = requestURI.substring(contextPath.length());
		String view = null; 
		
		switch(command2) {
			case "/userlist.do":
				UserService2 userService2 = UserService2.getInstance();
				ArrayList<User2> list2 = userService2.getUsers();
				view = "test/userlist";
				request2.setAttribute("list2", list2);
				break;
		}
		RequestDispatcher rd2= request2.getRequestDispatcher(view+".jsp");
		rd2.forward(request2, response2);
	}
}
